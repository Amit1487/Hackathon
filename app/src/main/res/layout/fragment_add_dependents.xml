<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bhartiairtel.themehackathon.dependents.AddDependentsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="#666666">

                <EditText
                    android:id="@+id/ed_uname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                    android:fontFamily="sans-serif-light"
                    android:hint="Dependant Name"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/text_color_hint">

                <EditText
                    android:id="@+id/ed_mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:digits="0123456789"
                    android:fontFamily="sans-serif-light"
                    android:hint="Dependant Mob"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/text_color_hint">

                <EditText
                    android:id="@+id/ed_relation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                    android:fontFamily="sans-serif-light"
                    android:hint="Relation"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/text_color_hint">

                <EditText
                    android:id="@+id/ed_amt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:digits="0123456789"
                    android:fontFamily="sans-serif-light"
                    android:hint="Withdrawl amt/month"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:background="@drawable/app_button_bg"
                android:fontFamily="sans-serif-light"
                android:text="Save"
                android:textColor="@color/white_color" />

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
