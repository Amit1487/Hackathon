<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/airtel_red_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white_color"
            android:textSize="20sp"
            android:text="Register" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="#666666">

            <EditText
                android:id="@+id/ed_uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                android:fontFamily="sans-serif-light"
                android:inputType="text"
                android:hint="Name"
                android:paddingLeft="10dp"
                android:textColor="@color/black_color"
                android:textColorHint="@color/text_color_hint"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/text_color_hint">

            <EditText
                android:id="@+id/ed_mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:hint="Mob No"
                android:maxLength="10"
                android:digits="0123456789"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="@color/black_color"
                android:textColorHint="@color/text_color_hint"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/text_color_hint">

            <EditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:hint="Email ID"
                android:inputType="textEmailAddress"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:textColor="@color/black_color"
                android:textColorHint="@color/text_color_hint"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">

            <Spinner
                android:id="@+id/spn_user_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/array_user"
                android:background="@drawable/spinner_background" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="5dp"
                android:src="@drawable/down_arrow" />
        </FrameLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/text_color_hint">

            <EditText
                android:id="@+id/ed_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:hint="Password"
                android:maxLength="4"
                android:paddingLeft="10dp"
                android:inputType="numberPassword"
                android:textColor="@color/black_color"
                android:textColorHint="@color/text_color_hint"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/text_color_hint">

            <EditText
                android:id="@+id/ed_confirm_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:hint="Confirm Password"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:paddingLeft="10dp"
                android:textColor="@color/black_color"
                android:textColorHint="@color/text_color_hint"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/app_button_bg"
            android:fontFamily="sans-serif-light"
            android:text="SIGN-UP"
            android:textStyle="bold"
            android:textColor="@color/white_color" />

    </LinearLayout>


</RelativeLayout>